<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_main_rl_MainContainer"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/act_main_rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/lay_toolbar" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/act_main_content_frg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/act_main_rl_bttabbar"
        android:layout_below="@+id/act_main_rl_toolbar" />



    <RelativeLayout
android:visibility="gone"
        android:id="@+id/act_main_rl_bttabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btmtabbar_inner_height"
        android:layout_alignParentBottom="true">

        <include layout="@layout/lay_bottomtab_bar" />

    </RelativeLayout>


</RelativeLayout>