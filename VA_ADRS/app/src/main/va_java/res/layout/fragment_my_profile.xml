<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/thm_gray_bg"
    android:clickable="true"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--Input panel-->


        <LinearLayout
            android:id="@+id/llEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/emp_particulars"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.dd.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="10dp"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_shadowColor="@color/thm_shadow"
                    app:sl_shadowRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shp_rect_rounded_white_card"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/xyz1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/frg_complete_profile_emp_imv_profile"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:gravity="start|center_vertical"
                                        android:hint="@string/name"
                                        android:inputType="text"
                                        android:lines="1"
                                        android:padding="5dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/black"
                                        android:textSize="@dimen/fontsize_mini"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_gravity="start"
                                        android:id="@+id/frg_my_profile_emp_txv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:gravity="start|center_vertical"
                                        android:hint="@string/enter_name"
                                        android:inputType="text"
                                        android:lines="1"
                                        android:padding="5dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="@dimen/edttext_font_padding"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/black"
                                        android:textSize="@dimen/fontsize_mini" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edttext_height_medium"
                                    android:background="@null"
                                    android:gravity="start|center_vertical"
                                    android:hint="@string/cnic_number"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/fontsize_mini"
                                    android:textStyle="bold" />

                                <TextView    android:layout_gravity="start"
                                    android:id="@+id/frg_my_profile_emp_txv_cnic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="start|center_vertical"
                                    android:hint="@string/enter_cnic"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:padding="5dp"

                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="@dimen/edttext_font_padding"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/fontsize_mini" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="start|center_vertical"
                                    android:hint="@string/Designation"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:padding="5dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/fontsize_mini"
                                    android:textStyle="bold" />


                                <TextView    android:layout_gravity="start"
                                    android:id="@+id/frg_my_profile_emp_txv_designation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="start|center_vertical"
                                    android:hint="@string/enter_mobile_number"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:padding="5dp"

                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="@dimen/edttext_font_padding"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/fontsize_mini" />


                            </LinearLayout>

                            <ast.adrs.va.Utils.CircleImageView
                                android:id="@+id/frg_complete_profile_emp_imv_profile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentEnd="true"

                                android:src="@drawable/ic_user_placeholder" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="100dp"
                                android:layout_height="@dimen/button_height_large"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:gravity="start|center_vertical"
                                android:lines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="@dimen/edttext_font_padding"
                                android:text="@string/Address"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/fontsize_mini"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/button_height_large"


                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/frg_home_txv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="start|center_vertical"
                                    android:layout_gravity="start"
                                    android:paddingStart="5dp"


                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fontsize_tiny" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </com.dd.ShadowLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/performance_summary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_xmedium"
                        android:layout_gravity="center"
                        android:background="@drawable/shp_rect_rounded_top_blue_medium"

                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp"

                        android:weightSum="100">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"

                                android:text="Sr."
                                android:textColor="@color/white"
                                android:textSize="@dimen/fontsize_tiny" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="start"
                                android:paddingStart="10dp"
                                android:text="@string/disease_report"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fontsize_tiny" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="@string/reports"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fontsize_tiny" />
                        </RelativeLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/frg_complete_profile_rcv_emp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clipToPadding="false"
                        android:divider="@null"
                        android:horizontalSpacing="7dp"

                        android:numColumns="2"
                        android:scrollbars="none"
                        android:verticalSpacing="7dp"
                        android:visibility="visible"
                        tools:listitem="@layout/lay_item_performance" />


                    <TextView
                        android:id="@+id/lay_item_performance_txv_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shp_bottom_rounded_white_medium"
                        android:gravity="end"
                        android:padding="5dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="15dp"
                        android:text=""

                        android:textColor="@color/gray"
                        android:textSize="@dimen/fontsize_mini" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</androidx.core.widget.NestedScrollView>