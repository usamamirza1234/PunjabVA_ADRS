<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/layview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:padding="5dp"
            android:paddingEnd="5dp">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:id="@+id/frg_rl_dir"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shp_bg_counter"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DIR"
                    android:textSize="@dimen/fontsize_micro" />

            </RelativeLayout>

            <LinearLayout android:layout_centerInParent="true"
                android:id="@+id/xyz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/frg_rl_dir"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">


                <TextView
                    android:id="@+id/lay_item_messages_txv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="start|center_vertical"
                    android:paddingStart="5dp"
                    android:text="23-3-32"
                    android:textColor="@color/green_govt"
                    android:textSize="@dimen/fontsize_mini" />

                <TextView
                    android:id="@+id/lay_item_messages_txv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingStart="5dp"
                    android:text="dssd"
                    android:textColor="@color/green_govt"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>


            <RelativeLayout android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/xyz2"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">


                <TextView
                    android:id="@+id/lay_item_messages_txv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="start|center_vertical"
                    android:maxLines="3"
                    android:text="fsfdsf"
                    android:textColor="@color/green_govt"
                    android:textSize="@dimen/fontsize_mini" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
