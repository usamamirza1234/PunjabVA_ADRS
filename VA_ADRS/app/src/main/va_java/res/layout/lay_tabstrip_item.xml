<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/laytabstrip_itm_imv_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/icn_tick" />

    <TextView
        android:id="@+id/laytabstrip_itm_txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/textview_font_padding"
        android:paddingTop="@dimen/textview_font_padding"
        android:text="MyTitle" />
</LinearLayout>